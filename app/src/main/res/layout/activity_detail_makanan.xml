<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMakanan">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtnama"
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="#FF9800"
                android:text="Seblak"
                android:textAlignment="center"
                android:textColor="#FCFCFC"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                app:srcCompat="@drawable/makananlima" />

            <TextView
                android:id="@+id/hargadetail"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:text="$ 50.00"
                android:textColor="#F4511E" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/aclonica"
                android:text="Seblak Prasmanan"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/acme"
                android:text="Seblak memiliki cita rasa pedas dan gurih yg khas, serta tekstur kerupuk yg kenyal"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/alatsi"
                android:text="With Topping><"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/acme"
                android:text="Kerupuk Basah" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/acme"
                android:text="Ceker Ayam" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/acme"
                android:text="Sayuran" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="300sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/acme"
                android:text="Sosis" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>